generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id                Int             @id @unique @default(autoincrement())
  produto           String
  nome              String
  descricao         String
  colecao           String
  grife             String
  disponivel        Int
  created_at        DateTime        @default(now())
  updated_at        DateTime        @updatedAt
  ProdutosPrecos    ProdutosPrecos[]
}

model ProdutosPrecos {
  id                Int      @id @unique @default(autoincrement())
  codigo            Int
  produto           String
  produtoid         Int
  Produto           Produto? @relation(fields: [produtoid], references: [id])
  preco1            Float
  limitedesconto    Int
  promocaodesconto  Int
  precoliquido1     Float
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt
}

model Role {
  id         Int     @default(autoincrement()) @id @unique 
  role       Boolean  
  usuario    Usuario[]
}

model Usuario {
  id         Int      @id @unique @default(autoincrement())
  nome       String
  email      String   @unique
  senha      String
  role       Role      @relation(fields: [isAdmin], references: [id])
  isAdmin    Int
  created_at DateTime @default(now())
}


